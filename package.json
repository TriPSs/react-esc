{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn run lerna:parrallel build",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:watch": "lerna run --parallel build",
    "ci:build": "npm run build:dev && npm run build:prod",
    "ci:publish": "yarn run build:prod && yarn run build:dev && lerna publish",
    "lerna:parrallel": "lerna run --parallel"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelrc-rollup": "^3.0.0",
    "lerna": "^2.5.1",
    "lerna-get-packages": "^1.0.0",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**"
    ]
  },
  "dependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1"
  }
}
